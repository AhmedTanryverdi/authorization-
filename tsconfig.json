{
	"compilerOptions": {
		/* Основные настройки */
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "react-jsx",

		/* Настройки пути модулей */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		/* Другие опции */
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack.config.js",
		"karma.conf.js",
		"jest.config.js"
	]
}
